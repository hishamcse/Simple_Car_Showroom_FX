<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Viewer.MakeModelSearchController"
            prefHeight="300.0" prefWidth="500.0" stylesheets="@viewer.css" fx:id="dialog">
    <content>
        <GridPane alignment="TOP_CENTER" hgap="10" vgap="20">
            <padding>
                <Insets top="10"/>
                <Insets bottom="10"/>
                <Insets left="10"/>
                <Insets right="10"/>
            </padding>
            <Text fx:id="title" text="Car Info to Search" GridPane.columnIndex="1" GridPane.columnSpan="1"
                  GridPane.rowIndex="0" GridPane.rowSpan="1">
            </Text>
            <Label text="Car Make:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="make" prefHeight="40" prefWidth="300" promptText="Enter Car Make"
                       style="-fx-background-radius: 15" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Car Model:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="model" prefHeight="40" prefWidth="300" promptText="Enter Car Model"
                       style="-fx-background-radius: 15" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <children>
                    <Button fx:id="search" alignment="CENTER" prefWidth="70" text="Search"/>
                </children>
            </HBox>
        </GridPane>
    </content>
</DialogPane>
